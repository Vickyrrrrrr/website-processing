<script>
    // Add hover effect for 3D card flip
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('section .h-64.relative');
        cards.forEach(card => {
            const htmlCard = card as HTMLElement;
            card.addEventListener('mouseenter', () => {
                htmlCard.style.transform = 'rotateY(180deg)';
            });
            card.addEventListener('mouseleave', () => {
                htmlCard.style.transform = 'rotateY(0deg)';
            });
        });
    });
</script>

{/* Form Section - Dark Purple Theme */}
